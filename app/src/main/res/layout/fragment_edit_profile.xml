<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MyProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/ivImage1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="Save"
                android:textAllCaps="false"
                android:background="@drawable/round_btn"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvChngProfilePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProfilePhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Change Profile Photo"
                android:textColor="@color/dark_turquoise"
                android:textStyle="bold" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvChngProfilePhoto"
                android:layout_marginTop="15dp"
                android:background="@color/light_grey"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Name:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:text="Sophia Xiang" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Age:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/etName"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                android:text="19" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Gender:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/etAge"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/turquoise" />

            <View
                android:id="@+id/line2"
                android:layout_width="242dp"
                android:layout_height="1dp"
                android:layout_below="@id/spinnerGender"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="24dp"
                android:background="@color/grey" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="From:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etFrom"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="Hometown"
                android:text="Orange County, CA" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Bio:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etBio"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/etFrom"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Bio"
                android:text="here is a sample bio!!!" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etBio"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Adventure Level:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderAdventureLevel"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView9"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:stepSize="1"
                android:value="1"
                android:valueFrom="1"
                android:valueTo="5"
                app:thumbColor="@color/dark_turquoise"
                app:tickVisible="false"
                app:trackColor="@color/light_grey" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Instagram:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etInstagram"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView11"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="-10dp"
                android:ems="10"
                android:hint="Instagram Username" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Photos:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/ivImage1"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/add_image" />

            <ImageView
                android:id="@+id/ivImage2"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_below="@+id/textView10"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/ivImage1"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/add_image" />

            <ImageView
                android:id="@+id/ivImage3"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_below="@+id/textView10"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/ivImage2"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/add_image" />

        </RelativeLayout>
    </ScrollView>
</layout>