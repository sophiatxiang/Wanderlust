<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TakePhotoFragment">

        <Button
            android:id="@+id/btnCaptureImage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/periwinkle"
            android:text="Take Photo" />

        <Button
            android:id="@+id/btnImportPhoto"
            android:layout_below="@id/btnCaptureImage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/periwinkle"
            android:text="Import Photo" />

        <ImageView
            android:id="@+id/ivCameraPhoto"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_below="@+id/btnImportPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnSubmitPhoto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivCameraPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/periwinkle"
            android:text="Save"
            android:visibility="gone" />

    </RelativeLayout>
</layout>